{% extends 'association/base_association.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

   {{ include('association/_form.html.twig') }}

    {% if status is defined %}
        {% if status == 'success' %}
            <div class="alert alert-success">Votre message a été envoyé avec succès !</div>
        {% else %}
            <div class="alert alert-danger">Une erreur s'est produite lors de l'envoi de votre message. Veuillez réessayer plus tard.</div>
        {% endif %}
    {% endif %}
{% endblock %}
